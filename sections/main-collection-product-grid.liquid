{%- liquid
  comment
    Detect collection type: coffee vs merch/couture
    Coffee collections: coffee, beans, or any collection with "coffee" in handle
    Merch collections: couture, merch, or any collection with "couture" or "merch" in handle
  endcomment
  assign collection_handle = collection.handle | downcase
  assign is_coffee_collection = false
  assign is_merch_collection = false
  
  if collection_handle contains 'coffee' or collection_handle contains 'beans'
    assign is_coffee_collection = true
  elsif collection_handle contains 'couture' or collection_handle contains 'merch'
    assign is_merch_collection = true
  endif
  
  comment
    Determine image aspect ratio:
    - Coffee: square (matching merch)
    - Merch: square
    - Default: use section setting
  endcomment
  if is_coffee_collection
    assign card_image_ratio = 'square'
  elsif is_merch_collection
    assign card_image_ratio = 'square'
  else
    assign card_image_ratio = section.settings.image_ratio
  endif
-%}

