    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Footer background image (fish pattern)",
      "info": "Used as video poster and fallback image background"
    },
    {
      "type": "image_picker",
      "id": "company_logo",
      "label": "Company logo (heart logo)"
