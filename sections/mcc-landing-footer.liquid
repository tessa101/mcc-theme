<script>
/* ===== Project Spongebob - Load Kelp SVGs Inline ===== */
(function() {
  function loadKelpSVGs() {
    const kelpContainers = document.querySelectorAll('[data-kelp-svg]');
    
    kelpContainers.forEach(function(container) {
      const svgUrl = container.getAttribute('data-kelp-svg');
      if (!svgUrl || container.querySelector('svg')) {
        // Already loaded, ensure animation is applied
        applyKelpAnimations(container);
        return;
      }
      
      // Add cache-busting parameter to force reload of updated SVG files
      const cacheBuster = '?v=' + Date.now();
      const svgUrlWithCache = svgUrl + (svgUrl.includes('?') ? '&' : '?') + cacheBuster;
      
      console.log('Fetching SVG with cache-bust:', svgUrlWithCache);
      
      fetch(svgUrlWithCache)
        .then(function(response) {
          if (!response.ok) throw new Error('Failed to load SVG');
          return response.text();
        })
        .then(function(svgText) {
          // Log SVG structure to verify groups
          console.log('SVG loaded, first 500 chars:', svgText.substring(0, 500));
          // Check if groups exist anywhere in the SVG
          const hasGroups = svgText.includes('<g id=') || svgText.includes('<g id="') || svgText.includes("id='");
          console.log('SVG contains group elements with IDs:', hasGroups);
          if (hasGroups) {
            // Find all group IDs in the text
            const groupIdMatches = svgText.match(/<g\s+id=["']([^"']+)["']/g);
            if (groupIdMatches) {
              console.log('Found group IDs in SVG text:', groupIdMatches);
            }
          }
          
          container.innerHTML = svgText;
          // Ensure SVG is constrained and doesn't cause expansion
          const svg = container.querySelector('svg');
          if (svg) {
            // Constrain SVG to container size
            svg.style.width = 'auto';
            svg.style.height = 'auto';
            svg.style.maxWidth = '100%';
            svg.style.maxHeight = '100%';
            svg.style.display = 'block';
            svg.style.overflow = 'visible'; // Allow content, but container clips
            svg.style.boxSizing = 'border-box';
            
            // For bottom-anchored kelp, calculate negative bottom margin to align bottom content
            if (container.classList.contains('mcc-kelp-left') || 
                container.classList.contains('mcc-kelp-right-front')) {
              // Wait for SVG to render, then measure
              setTimeout(function() {
                // Get SVG viewBox to understand coordinate system
                const viewBox = svg.viewBox.baseVal;
                const viewBoxHeight = viewBox.height;
                
                // Get actual rendered dimensions
                const renderedHeight = svg.offsetHeight || svg.clientHeight;
                const containerHeight = container.offsetHeight;
                
                // If kelp content is at top of viewBox, we need to shift SVG DOWN
                // Use negative margin-bottom to push it down and align kelp bottom with container bottom
                if (renderedHeight > containerHeight && viewBoxHeight > 0) {
                  // Shift DOWN by the excess height
                  const excessHeight = renderedHeight - containerHeight;
                  svg.style.marginBottom = '-' + excessHeight + 'px';
                  console.log('Setting negative margin-bottom:', -excessHeight, 'px for', container.className, 
                              '(viewBox height:', viewBoxHeight, ', rendered:', renderedHeight, ', container:', containerHeight + ')');
                } else if (renderedHeight <= containerHeight && viewBoxHeight > 0) {
                  // SVG fits in container, but kelp might still be at top of viewBox
                  // Estimate empty space at bottom of viewBox (assuming kelp occupies most of it)
                  // For left kelp: extends 66px below footer
                  // For right-front kelp: extends 134px below footer
                  let extensionPixels = 0;
                  if (container.classList.contains('mcc-kelp-left')) {
                    extensionPixels = 66; // From spec sheet
                  } else if (container.classList.contains('mcc-kelp-right-front')) {
                    extensionPixels = 134; // From spec sheet
                  }
                  
                  if (extensionPixels > 0) {
                    // Convert extension to negative margin to shift SVG down
                    svg.style.marginBottom = '-' + extensionPixels + 'px';
                    console.log('Setting negative margin-bottom:', -extensionPixels, 'px (from spec) for', container.className);
                  } else {
                    // Fallback: estimate based on viewBox
                    const estimatedKelpHeight = viewBoxHeight * 0.8;
                    const emptySpace = viewBoxHeight - estimatedKelpHeight;
                    if (emptySpace > 0) {
                      const pixelRatio = renderedHeight / viewBoxHeight;
                      const shiftPixels = emptySpace * pixelRatio;
                      svg.style.marginBottom = '-' + shiftPixels + 'px';
                      console.log('Setting negative margin-bottom:', -shiftPixels, 'px (estimated) for', container.className);
                    }
                  }
                }
              }, 100); // Small delay to ensure SVG is rendered
            }
            
            // Debug: Log found strand groups - check for IDs on any element type
            // Try multiple selectors to find groups
            const allElementsWithIds = svg.querySelectorAll('[id]');
            const groupsWithIds = svg.querySelectorAll('g[id]');
            const directChildrenWithIds = Array.from(svg.children).filter(function(el) { return el.id; });
            
