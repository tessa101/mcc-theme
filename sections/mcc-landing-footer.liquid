{% comment %} MCC Landing — Footer {% endcomment %}
{%- liquid
  assign beans_col = collections['beans'] | default: collections['coffee']
  assign merch_col = collections['merch']
  assign coldbrew_col = collections['cold-brew'] | default: collections['coldbrew']
-%}

<section class="mcc-landing-footer" data-mcc-landing="footer">
  <div class="mcc-footer-wrapper">
    {%- comment -%} Left: Logo text and social icons {%- endcomment -%}
    <div class="mcc-footer-left">
      <h2 class="mcc-footer-logo-text">
        <span class="mcc-footer-logo-line">MALIBU</span>
        <span class="mcc-footer-logo-line">COFFEE</span>
        <span class="mcc-footer-logo-line">COMPANY</span>
      </h2>
      <div class="mcc-footer-social">
        <a href="https://www.instagram.com/malibucoffeecompany/" class="mcc-social-link" aria-label="Instagram" target="_blank" rel="noopener">
          <span class="mcc-social-icon-wrapper">
            {{- 'icon-instagram.svg' | inline_asset_content -}}
          </span>
        </a>
        {%- if settings.social_pinterest_link != blank -%}
          <a href="{{ settings.social_pinterest_link }}" class="mcc-social-link" aria-label="Pinterest" target="_blank" rel="noopener">
        {%- else -%}
          <span class="mcc-social-link">
        {%- endif -%}
          <span class="mcc-social-icon-wrapper">
            {{- 'icon-pinterest.svg' | inline_asset_content -}}
          </span>
        {%- if settings.social_pinterest_link != blank -%}
          </a>
        {%- else -%}
          </span>
        {%- endif -%}
        {%- if settings.social_tiktok_link != blank -%}
          <a href="{{ settings.social_tiktok_link }}" class="mcc-social-link" aria-label="TikTok" target="_blank" rel="noopener">
        {%- else -%}
          <span class="mcc-social-link">
        {%- endif -%}
          <span class="mcc-social-icon-wrapper">
            {{- 'icon-tiktok.svg' | inline_asset_content -}}
          </span>
        {%- if settings.social_tiktok_link != blank -%}
          </a>
        {%- else -%}
          </span>
        {%- endif -%}
      </div>
    </div>

    {%- comment -%} Center-Right: Navigation links in three columns {%- endcomment -%}
    <div class="mcc-footer-nav">
      <div class="mcc-footer-nav-col">
        <h3 class="mcc-footer-nav-title">Company</h3>
        <ul class="mcc-footer-nav-list">
          {%- if section.settings.about_us_link != blank -%}
            <li><a href="{{ section.settings.about_us_link }}">About us</a></li>
          {%- endif -%}
          {%- if section.settings.wholesale_link != blank -%}
            <li><a href="{{ section.settings.wholesale_link }}">Wholesale</a></li>
          {%- endif -%}
          {%- if section.settings.partnerships_link != blank -%}
            <li><a href="{{ section.settings.partnerships_link }}">Partnerships</a></li>
          {%- endif -%}
          {%- if section.settings.contact_link != blank -%}
            <li><a href="{{ section.settings.contact_link }}">Contact us</a></li>
          {%- endif -%}
        </ul>
      </div>

      <div class="mcc-footer-nav-col">
        <h3 class="mcc-footer-nav-title">Products</h3>
        <ul class="mcc-footer-nav-list">
          {%- if coldbrew_col != blank -%}
            <li><a href="{{ coldbrew_col.url }}">Cold brew</a></li>
          {%- endif -%}
          {%- if beans_col != blank -%}
            <li><a href="{{ beans_col.url }}">Coffee</a></li>
          {%- endif -%}
          {%- if merch_col != blank -%}
            <li><a href="{{ merch_col.url }}">Merchandise</a></li>
          {%- endif -%}
        </ul>
      </div>

      <div class="mcc-footer-nav-col">
        <h3 class="mcc-footer-nav-title">Account</h3>
        <ul class="mcc-footer-nav-list">
          <li><a href="{{ routes.account_login_url }}">Log in</a></li>
          <li><span class="mcc-footer-text-only">Orders</span></li>
          <li><span class="mcc-footer-text-only">Subscriptions</span></li>
        </ul>
      </div>
    </div>
  </div>

  {%- comment -%} Bottom: Legal text and company logo {%- endcomment -%}
  <div class="mcc-footer-bottom-wrapper">
    <div class="mcc-footer-bottom">
      <div class="mcc-footer-legal">
        <span class="mcc-footer-copyright">&copy; {{ 'now' | date: '%Y' }} Malibu Coffee Company</span>
        <span class="mcc-footer-policy-sep"> </span>
        {%- for policy in shop.policies -%}
          {%- if policy != blank -%}
            <a href="{{ policy.url }}">{{ policy.title | escape }}</a>
            {%- unless forloop.last -%}<span class="mcc-footer-policy-sep"> </span>{%- endunless -%}
          {%- endif -%}
        {%- endfor -%}
      </div>
      {%- if section.settings.company_logo != blank -%}
        <div class="mcc-footer-logo">
          {{ section.settings.company_logo | image_url: width: 200 | image_tag: alt: 'Malibu Coffee Company', class: 'mcc-footer-logo-img' }}
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

<style>
/* Override parent section backgrounds */
.shopify-section:has(.mcc-landing-footer),
.shopify-section:has([data-mcc-landing="footer"]),
[id*="shopify-section"]:has(.mcc-landing-footer),
.shopify-section:has(.mcc-landing-footer) > * {
  background: transparent !important;
  background-color: transparent !important;
  background-image: none !important;
}

/* Override .gradient class on parent section */
.shopify-section:has(.mcc-landing-footer).gradient,
.shopify-section:has(.mcc-landing-footer) .gradient,
[id*="shopify-section"]:has(.mcc-landing-footer).gradient {
  background: transparent !important;
  background-color: transparent !important;
  background-image: none !important;
  background-attachment: scroll !important;
}

/* Override color scheme CSS variables */
.shopify-section:has(.mcc-landing-footer)[class*="color-"] {
  --color-background: transparent !important;
  --gradient-background: transparent !important;
}

/* Footer section - transparent background */
section.mcc-landing-footer,
.mcc-landing-footer,
section.mcc-landing-footer.gradient,
.mcc-landing-footer.gradient {
  position: relative;
  padding: 60px 50px 40px;
  color: #fff !important;
  overflow: hidden;
  background-color: transparent !important;
  min-height: 200px;
  display: block !important;
}

/* Background image via ::before pseudo-element */
section.mcc-landing-footer::before,
.mcc-landing-footer::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: -1;
  pointer-events: none;
  {%- if section.settings.background_image != blank -%}
  background-image: url('{{ section.settings.background_image | image_url: width: 2400 }}');
  {%- else -%}
  background-image: url('{{ 'Footer img placeholder.png' | asset_url }}');
  {%- endif -%}
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.mcc-footer-wrapper {
  position: relative;
  z-index: 1;
  width: 100%;
  padding: 0;
  display: grid;
  grid-template-columns: 1fr 2fr;
  gap: 32px;
  align-items: start;
}

.mcc-footer-left {
  margin-bottom: 0;
  justify-self: start;
}

.mcc-footer-logo-text,
.mcc-landing-footer h2.mcc-footer-logo-text {
  font-family: 'Passion One', var(--font-sans) !important;
  font-size: 80px !important;
  line-height: 70px !important;
  font-weight: 400 !important;
  color: #FFF !important;
  margin: 0 0 24px !important;
  letter-spacing: -0.02em !important;
  display: flex !important;
  flex-direction: column !important;
  text-transform: uppercase !important;
}

.mcc-footer-logo-text *,
.mcc-footer-logo-line,
.mcc-landing-footer .mcc-footer-logo-text span {
  font-size: 80px !important;
  line-height: 70px !important;
  color: #FFF !important;
}

.mcc-footer-logo-line {
  display: block !important;
  white-space: nowrap !important;
}

.mcc-footer-social {
  display: flex;
  gap: 16px;
  align-items: center;
  margin-top: 16px;
}

.mcc-social-link {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  transition: opacity 0.2s;
  width: 24px;
  height: 24px;
  line-height: 0;
}

.mcc-social-link:hover {
  opacity: 0.7;
}

.mcc-social-icon-wrapper {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 24px;
  height: 24px;
  color: #fff;
}

.mcc-social-icon-wrapper svg {
  width: 24px !important;
  height: 24px !important;
  fill: #fff !important;
  color: #fff !important;
  display: block !important;
}

.mcc-social-icon-wrapper svg path {
  fill: #fff !important;
}

.mcc-footer-nav {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 32px;
  align-items: start;
  justify-self: end;
}

.mcc-footer-nav-title {
  font-family: 'Passion One', var(--font-sans) !important;
  font-size: 32px !important;
  font-weight: 400 !important;
  color: #0B5262 !important;
  margin: 0 0 16px !important;
  text-transform: none !important;
  line-height: 1.2 !important;
}

.mcc-footer-nav-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.mcc-footer-nav-list li {
  margin-bottom: 4px !important;
}

.mcc-footer-nav-list a {
  color: #0B5262 !important;
  text-decoration: none !important;
  font-family: 'SuisseIntl', var(--font-sans) !important;
  font-size: 18px !important;
  font-weight: 400 !important;
  transition: opacity 0.2s;
  line-height: 1.4 !important;
}

.mcc-footer-nav-list a:hover {
  opacity: 0.7 !important;
}

.mcc-footer-text-only {
  color: #0B5262 !important;
  font-family: 'SuisseIntl', var(--font-sans) !important;
  font-size: 18px !important;
  font-weight: 400 !important;
  opacity: 1 !important;
  line-height: 1.4 !important;
}

.mcc-footer-bottom-wrapper {
  grid-column: 1 / -1;
  margin-top: 60px;
  padding-top: 40px;
}

.mcc-footer-bottom {
  display: grid;
  grid-template-columns: 1fr auto 1fr;
  align-items: center;
  gap: 24px;
  width: 100%;
}

.mcc-footer-legal {
  grid-column: 1;
  justify-self: start;
  display: inline-flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 0;
  white-space: nowrap;
}

.mcc-footer-copyright {
  color: #093944 !important;
  font-size: 12px !important;
  margin: 0 !important;
  opacity: 1 !important;
  display: inline;
}

.mcc-footer-legal a {
  color: #093944 !important;
  font-size: 12px !important;
  text-decoration: none !important;
  transition: opacity 0.2s;
  opacity: 1 !important;
  display: inline;
}

.mcc-footer-legal a:hover {
  opacity: 0.7 !important;
}

.mcc-footer-policy-sep {
  color: #093944 !important;
  opacity: 1 !important;
  display: inline;
  margin: 0 4px;
}

.mcc-footer-logo {
  grid-column: 2;
  justify-self: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mcc-footer-logo-img {
  max-width: 80px;
  height: auto;
}

/* Responsive Design */
@media (max-width: 768px) {
  section.mcc-landing-footer,
  .mcc-landing-footer {
    padding: 40px 15px 32px;
  }

  .mcc-footer-wrapper {
    grid-template-columns: 1fr;
    gap: 50px;
    padding: 50px 0 0;
  }

  .mcc-footer-left {
    justify-self: stretch;
  }

  .mcc-footer-nav {
    justify-self: stretch;
  }

  .mcc-footer-logo-text {
    font-size: 56px !important;
    line-height: 48px !important;
    margin-bottom: 20px !important;
  }

  .mcc-footer-logo-text,
  .mcc-footer-logo-text *,
  .mcc-footer-logo-line {
    font-size: 56px !important;
    line-height: 48px !important;
  }

  .mcc-footer-logo-line {
    display: block !important;
  }

  .mcc-footer-nav {
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
  }

  .mcc-footer-nav-title {
    font-size: 24px !important;
    line-height: 1.2 !important;
    color: #093944 !important;
  }

  .mcc-footer-nav-list a,
  .mcc-footer-text-only {
    font-size: 16px !important;
    color: #093944 !important;
  }

  .mcc-footer-bottom-wrapper {
    margin-top: 40px;
  }

  .mcc-footer-bottom {
    grid-template-columns: 1fr;
    gap: 24px;
  }

  .mcc-footer-legal {
    grid-column: 1;
    justify-self: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    white-space: normal;
  }

  .mcc-footer-copyright {
    display: block;
  }

  .mcc-footer-legal a {
    display: block;
  }

  .mcc-footer-policy-sep {
    display: none;
  }

  .mcc-footer-logo {
    grid-column: 1;
    justify-self: center;
    order: -1;
  }
}

@media (min-width: 769px) and (max-width: 989px) {
  .mcc-footer-logo-text {
    font-size: 72px;
    line-height: 64px;
  }

  .mcc-footer-nav {
    gap: 32px;
  }
}
</style>

{% schema %}
{
  "name": "MCC Landing — Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Footer background image (fish pattern)"
    },
    {
      "type": "image_picker",
      "id": "company_logo",
      "label": "Company logo (heart logo)"
    },
    {
      "type": "url",
      "id": "about_us_link",
      "label": "About us link"
    },
    {
      "type": "url",
      "id": "wholesale_link",
      "label": "Wholesale link"
    },
    {
      "type": "url",
      "id": "partnerships_link",
      "label": "Partnerships link"
    },
    {
      "type": "url",
      "id": "contact_link",
      "label": "Contact us link"
    }
  ],
  "presets": [{ "name": "MCC Landing — Footer" }]
}
{% endschema %}
