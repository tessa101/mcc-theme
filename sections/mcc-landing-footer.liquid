{% comment %} MCC Landing — Footer {% endcomment %}
{%- liquid
  assign beans_col = collections['beans'] | default: collections['coffee']
  assign merch_col = collections['merch']
  assign coldbrew_col = collections['cold-brew'] | default: collections['coldbrew']
-%}

<section class="mcc-landing-footer{% if section.settings.use_video_background %} mcc-footer-has-video{% endif %}" data-mcc-landing="footer">
  {%- comment -%} Video background (if enabled) {%- endcomment -%}
  {%- if section.settings.use_video_background and section.settings.video != blank -%}
    {%- liquid
      assign video_element = section.settings.video | video_tag: autoplay: true, loop: true, muted: true, preload: 'auto'
      assign video_element = video_element | replace: '<video ', '<video class="mcc-footer-video-bg" playsinline data-video-fallback="true" '
    -%}
    {{ video_element }}
  {%- endif -%}
  <div class="mcc-footer-wrapper">
    {%- comment -%} Left: Logo text and social icons {%- endcomment -%}
    <div class="mcc-footer-left">
      <h2 class="mcc-footer-logo-text">
        <span class="mcc-footer-logo-line">MALIBU</span>
        <span class="mcc-footer-logo-line">COFFEE</span>
        <span class="mcc-footer-logo-line">COMPANY</span>
      </h2>
      <div class="mcc-footer-social">
        <a href="https://www.instagram.com/malibucoffeecompany/" class="mcc-social-link" aria-label="Instagram" target="_blank" rel="noopener">
          <span class="mcc-social-icon-wrapper">
            {{- 'icon-instagram.svg' | inline_asset_content -}}
          </span>
        </a>
        {%- if settings.social_pinterest_link != blank -%}
          <a href="{{ settings.social_pinterest_link }}" class="mcc-social-link" aria-label="Pinterest" target="_blank" rel="noopener">
        {%- else -%}
          <span class="mcc-social-link">
        {%- endif -%}
          <span class="mcc-social-icon-wrapper">
            {{- 'icon-pinterest.svg' | inline_asset_content -}}
          </span>
        {%- if settings.social_pinterest_link != blank -%}
          </a>
        {%- else -%}
          </span>
        {%- endif -%}
        {%- if settings.social_tiktok_link != blank -%}
          <a href="{{ settings.social_tiktok_link }}" class="mcc-social-link" aria-label="TikTok" target="_blank" rel="noopener">
        {%- else -%}
          <span class="mcc-social-link">
        {%- endif -%}
          <span class="mcc-social-icon-wrapper">
            {{- 'icon-tiktok.svg' | inline_asset_content -}}
          </span>
        {%- if settings.social_tiktok_link != blank -%}
          </a>
        {%- else -%}
          </span>
        {%- endif -%}
      </div>
    </div>

    {%- comment -%} Center-Right: Navigation links in three columns {%- endcomment -%}
    <div class="mcc-footer-nav">
      <div class="mcc-footer-nav-col">
        <h3 class="mcc-footer-nav-title">Company</h3>
        <ul class="mcc-footer-nav-list">
          {%- if section.settings.about_us_link != blank -%}
            <li><a href="{{ section.settings.about_us_link }}">About us</a></li>
          {%- endif -%}
          {%- if section.settings.wholesale_link != blank -%}
            <li><a href="{{ section.settings.wholesale_link }}">Wholesale</a></li>
          {%- endif -%}
          {%- if section.settings.partnerships_link != blank -%}
            <li><a href="{{ section.settings.partnerships_link }}">Partnerships</a></li>
          {%- endif -%}
          {%- if section.settings.contact_link != blank -%}
            <li><a href="{{ section.settings.contact_link }}">Contact us</a></li>
          {%- endif -%}
        </ul>
      </div>

      <div class="mcc-footer-nav-col">
        <h3 class="mcc-footer-nav-title">Products</h3>
        <ul class="mcc-footer-nav-list">
          {%- if coldbrew_col != blank -%}
            <li><a href="{{ coldbrew_col.url }}">Cold brew</a></li>
          {%- endif -%}
          {%- if beans_col != blank -%}
            <li><a href="{{ beans_col.url }}">Coffee</a></li>
          {%- endif -%}
          {%- if merch_col != blank -%}
            <li><a href="{{ merch_col.url }}">Merchandise</a></li>
          {%- endif -%}
        </ul>
      </div>

      <div class="mcc-footer-nav-col">
        <h3 class="mcc-footer-nav-title">Account</h3>
        <ul class="mcc-footer-nav-list">
          <li><a href="{{ routes.account_login_url }}">Log in</a></li>
          <li><span class="mcc-footer-text-only">Orders</span></li>
          <li><span class="mcc-footer-text-only">Subscriptions</span></li>
        </ul>
      </div>
    </div>
  </div>

  {%- comment -%} Bottom: Legal text and company logo {%- endcomment -%}
  <div class="mcc-footer-bottom-wrapper">
    <div class="mcc-footer-bottom">
      <div class="mcc-footer-legal">
        <span class="mcc-footer-copyright">&copy; {{ 'now' | date: '%Y' }} Malibu Coffee Company</span>
        <span class="mcc-footer-policy-sep"> </span>
        {%- for policy in shop.policies -%}
          {%- if policy != blank -%}
            <a href="{{ policy.url }}">{{ policy.title | escape }}</a>
            {%- unless forloop.last -%}<span class="mcc-footer-policy-sep"> </span>{%- endunless -%}
          {%- endif -%}
        {%- endfor -%}
      </div>
      {%- if section.settings.company_logo != blank -%}
        <div class="mcc-footer-logo">
          {{ section.settings.company_logo | image_url: width: 200 | image_tag: alt: 'Malibu Coffee Company', class: 'mcc-footer-logo-img' }}
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

<style>
/* Override parent section backgrounds */
.shopify-section:has(.mcc-landing-footer),
.shopify-section:has([data-mcc-landing="footer"]),
[id*="shopify-section"]:has(.mcc-landing-footer),
.shopify-section:has(.mcc-landing-footer) > * {
  background: transparent !important;
  background-color: transparent !important;
  background-image: none !important;
}

/* Override .gradient class on parent section */
.shopify-section:has(.mcc-landing-footer).gradient,
.shopify-section:has(.mcc-landing-footer) .gradient,
[id*="shopify-section"]:has(.mcc-landing-footer).gradient {
  background: transparent !important;
  background-color: transparent !important;
  background-image: none !important;
  background-attachment: scroll !important;
}

/* Override color scheme CSS variables */
.shopify-section:has(.mcc-landing-footer)[class*="color-"] {
  --color-background: transparent !important;
  --gradient-background: transparent !important;
}

/* Footer section - transparent background */
section.mcc-landing-footer,
.mcc-landing-footer,
section.mcc-landing-footer.gradient,
.mcc-landing-footer.gradient {
  position: relative;
  padding: 60px 50px 40px;
  color: #fff !important;
  overflow: hidden;
  background-color: transparent !important;
  min-height: 200px;
  display: block !important;
}

/* Video background */
.mcc-footer-video-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  z-index: -1;
  pointer-events: none;
  display: block;
  opacity: 1;
  visibility: visible;
}

/* Background image via ::before pseudo-element */
/* When video is enabled, this is completely hidden */
/* When video is disabled, this is the primary background (z-index: -1) */
section.mcc-landing-footer::before,
.mcc-landing-footer::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: -1;
  pointer-events: none;
  {%- if section.settings.background_image != blank -%}
  background-image: url('{{ section.settings.background_image | image_url: width: 2400 }}');
  {%- else -%}
  background-image: url('{{ 'Footer img placeholder.png' | asset_url }}');
  {%- endif -%}
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

/* Show background image by default when video is enabled (as fallback while video loads) */
/* Hide it once video starts playing */
.mcc-footer-has-video::before {
  display: block !important;
}

/* Hide background image when video is successfully playing */
.mcc-footer-has-video.mcc-footer-video-playing::before {
  display: none !important;
}

