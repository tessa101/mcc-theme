  if (!video) {
    console.warn('Footer video element not found');
    return;
  }
  
  const footer = document.querySelector('.mcc-landing-footer');
  if (!footer) return;
  
  let fallbackShown = false;
  
  // Get video source URL for logging (Shopify video_tag generates the source)
  const videoSrc = video.currentSrc || video.querySelector('source')?.src || video.src || 'unknown';
  console.log('Footer video source URL:', videoSrc);
  
  // Footer now uses CSS aspect-ratio: 16/9, so we don't need to calculate height
  // This function is kept for compatibility but no longer sets height
  function calculateFooterHeight() {
    // Footer height is now controlled by CSS aspect-ratio: 16/9
    // Video will use object-fit: cover to fill the 16:9 container
    console.log('Footer using 16:9 aspect ratio (CSS controlled)');
  }
  
  // Function to handle window resize
  let resizeTimeout;
  function handleResize() {
    clearTimeout(resizeTimeout);
    resizeTimeout = setTimeout(function() {
      calculateFooterHeight();
    }, 250);
  }
  
  // Function to show fallback image (hide video)
  function showFallback(reason) {
    if (fallbackShown) return;
    fallbackShown = true;
    
    console.warn('Footer video failed, showing fallback image. Reason:', reason || 'unknown');
    console.warn('Video source was:', videoSrc);
    video.style.display = 'none';
    footer.classList.remove('mcc-footer-video-playing');
  }
  
  // Function to hide fallback image (show video)
  function hideFallback() {
    footer.classList.add('mcc-footer-video-playing');
  }
  
  // Ensure video is visible initially
  video.style.display = 'block';
  
  // Handle video load errors - show fallback image
  video.addEventListener('error', function(e) {
    const error = video.error;
    let errorMessage = 'Unknown error';
    
    if (error) {
      switch(error.code) {
        case error.MEDIA_ERR_ABORTED:
          errorMessage = 'Video loading aborted';
          break;
        case error.MEDIA_ERR_NETWORK:
          errorMessage = 'Network error while loading video';
          break;
        case error.MEDIA_ERR_DECODE:
          errorMessage = 'Video decoding error';
          break;
        case error.MEDIA_ERR_SRC_NOT_SUPPORTED:
          errorMessage = 'Video format not supported or source not found';
          break;
        default:
          errorMessage = 'Unknown video error (code: ' + error.code + ')';
      }
    }
    
    console.error('Footer video error event:', e);
    console.error('Video error details:', {
      error: error,
      errorCode: error ? error.code : 'none',
      errorMessage: errorMessage,
      networkState: video.networkState,
      networkStateText: getNetworkStateText(video.networkState),
      readyState: video.readyState,
      readyStateText: getReadyStateText(video.readyState),
      src: videoSrc,
      currentSrc: video.currentSrc
    });
    showFallback(errorMessage);
  });
  
  // Helper function to get network state text
  function getNetworkStateText(state) {
    const states = ['EMPTY', 'IDLE', 'LOADING', 'NO_SOURCE'];
    return states[state] || 'UNKNOWN';
  }
  
  // Helper function to get ready state text
  function getReadyStateText(state) {
    const states = ['HAVE_NOTHING', 'HAVE_METADATA', 'HAVE_CURRENT_DATA', 'HAVE_FUTURE_DATA', 'HAVE_ENOUGH_DATA'];
    return states[state] || 'UNKNOWN';
  }
  
  // Handle stalled video
  video.addEventListener('stalled', function() {
    console.warn('Footer video stalled - network issue');
    if (video.networkState === video.NETWORK_NO_SOURCE) {
      showFallback('Video source not found (stalled)');
    }
  });
  
  // Handle suspended video
  video.addEventListener('suspend', function() {
    console.warn('Footer video suspended - loading paused');
  });
  
  // Handle aborted video
  video.addEventListener('abort', function() {
    console.warn('Footer video aborted');
    showFallback('Video loading aborted');
  });
  
  // Function to force video play
  function forcePlay() {
    if (fallbackShown) return;
    
    if (video.readyState >= 2) {
      const playPromise = video.play();
      if (playPromise !== undefined) {
        playPromise.then(function() {
          console.log('Footer video is playing');
          video.style.display = 'block';
          hideFallback(); // Hide the fallback image once video is playing
        }).catch(function(error) {
          console.warn('Video autoplay prevented:', error);
          // Don't show fallback for autoplay restrictions, just try on interaction
          const playOnInteraction = function() {
            video.play().then(function() {
              video.style.display = 'block';
              hideFallback();
            }).catch(function() {});
            document.removeEventListener('click', playOnInteraction);
            document.removeEventListener('touchstart', playOnInteraction);
          };
          document.addEventListener('click', playOnInteraction, { once: true });
          document.addEventListener('touchstart', playOnInteraction, { once: true });
        });
      }
    }
  }
  
  // Verify video source URL before attempting to load
  function verifyVideoSource() {
    // Shopify video_tag may have source element or direct src on video
    const source = video.querySelector('source');
    const videoSrc = video.currentSrc || source?.src || video.src;
    
    if (!videoSrc || videoSrc === '' || videoSrc === window.location.href) {
      console.error('Footer video: No valid source found');
      console.error('Video element:', video);
      console.error('Source element:', source);
      showFallback('No video source found');
      return false;
    }
    
    console.log('Footer video source verified:', videoSrc);
    return true;
  }
  
  // Verify source on load (wait a bit for Shopify video to initialize)
  setTimeout(function() {
    if (!verifyVideoSource()) {
      return; // Exit if source is invalid
    }
  }, 100);
  
  // Check if video source is valid
  video.addEventListener('loadstart', function() {
    console.log('Footer video started loading');
    console.log('Video currentSrc:', video.currentSrc);
    console.log('Video networkState:', getNetworkStateText(video.networkState));
    video.style.display = 'block';
  });
  
  // Ensure video plays when data is loaded
  video.addEventListener('loadeddata', function() {
    console.log('Footer video data loaded');
    console.log('Video readyState:', getReadyStateText(video.readyState));
    video.style.display = 'block';
    forcePlay();
  });
  
  // Ensure video plays when canplay event fires
  video.addEventListener('canplay', function() {
    console.log('Footer video can play');
    video.style.display = 'block';
    forcePlay();
  });
  
  // Once video starts playing, hide fallback image
  video.addEventListener('playing', function() {
    console.log('Footer video is playing successfully');
    video.style.display = 'block';
    hideFallback(); // Hide the fallback image
  });
  
  // Handle video metadata loaded
  video.addEventListener('loadedmetadata', function() {
    console.log('Footer video metadata loaded');
    console.log('Video dimensions:', video.videoWidth, 'x', video.videoHeight);
    console.log('Footer using 16:9 aspect ratio (CSS controlled)');
  });
  
  // Footer height is now CSS-controlled (16:9 aspect ratio)
  // No need for resize listener for height calculation
  // Video will automatically fit the 16:9 container with object-fit: cover
  
  // Try to play immediately if video is already loaded
  if (video.readyState >= 2) {
    console.log('Footer video already loaded, attempting to play');
    forcePlay();
  }
  
  // Background image case is handled by letting the section grow naturally with content
  // The ::before pseudo-element uses background-size: cover which will scale appropriately
  
  // Improved fallback: check video state more frequently
  let checkCount = 0;
  const maxChecks = 4; // Check 4 times over 2 seconds
  const checkInterval = 500; // Check every 500ms
  
  const videoCheckInterval = setInterval(function() {
    if (fallbackShown) {
      clearInterval(videoCheckInterval);
      return;
    }
    
    checkCount++;
    
    // Check if video has an error
    if (video.error) {
      console.warn('Footer video has error during check:', video.error);
      showFallback('Video error detected');
      clearInterval(videoCheckInterval);
      return;
    }
    
    // Check network state
    if (video.networkState === video.NETWORK_NO_SOURCE) {
      console.warn('Footer video: No source available');
      showFallback('Video source not available');
      clearInterval(videoCheckInterval);
      return;
    }
    
    // Check if video is loaded enough to play
    if (video.readyState >= 3 && !video.paused) {
      // Video is playing or ready to play
      console.log('Footer video is ready/playing, stopping checks');
      clearInterval(videoCheckInterval);
      return;
    }
    
    // After max checks, if video still not ready, show fallback
    if (checkCount >= maxChecks) {
      if (video.readyState === 0 || (video.readyState < 3 && video.paused)) {
        console.warn('Footer video did not load/play after', (maxChecks * checkInterval / 1000), 'seconds');
        console.warn('Final state - readyState:', getReadyStateText(video.readyState), 'networkState:', getNetworkStateText(video.networkState));
        showFallback('Video did not load in time');
      }
      clearInterval(videoCheckInterval);
    }
  }, checkInterval);
})();
</script>
