{% comment %} MCC Landing — Footer {% endcomment %}
{%- liquid
  assign beans_col = collections['beans'] | default: collections['coffee']
  assign merch_col = collections['merch']
  assign coldbrew_col = collections['cold-brew'] | default: collections['coldbrew']
  
  comment
    Hard-coded footer version control (for future flexibility)
    Determine if this is a landing page or internal page
  endcomment
  assign is_landing_mcc = false
  if template == 'index'
    assign is_landing_mcc = true
  elsif template == 'page.landing-mcc'
    assign is_landing_mcc = true
  elsif template.name == 'page' and template.suffix == 'landing-mcc'
    assign is_landing_mcc = true
  endif
  
  comment
    Set footer version: 'landing' for landing pages, 'internal' for all other pages
    For now, both render the same content, but structure is ready for different versions
  endcomment
  if is_landing_mcc
    assign footer_version = 'landing'
  else
    assign footer_version = 'internal'
  endif
-%}

<section class="mcc-landing-footer{% if section.settings.use_video_background %} mcc-footer-has-video{% endif %}" data-mcc-landing="footer">
  {%- comment -%} Video background (if enabled) {%- endcomment -%}
  {%- if section.settings.use_video_background -%}
    {%- if section.settings.video != blank -%}
      {%- liquid
        assign video_element = section.settings.video | video_tag: autoplay: true, loop: true, muted: true, preload: 'auto'
        assign video_element = video_element | replace: '<video ', '<video class="mcc-footer-video-bg" playsinline data-video-fallback="true" '
      -%}
      {{ video_element }}
    {%- endif -%}
  {%- endif -%}
  
  {%- comment -%} Kelp overlays (desktop only) - Project Spongebob {%- endcomment -%}
  {%- if section.settings.use_video_background -%}
    <div class="mcc-footer-kelp-container">
      {%- comment -%} Right-side mid kelp (background layer) {%- endcomment -%}
      <div class="mcc-kelp-right-mid" data-kelp-svg="{{ 'right-side-mid-kelp.svg' | asset_url }}"></div>
      
      {%- comment -%} Right-side front kelp (foreground layer) {%- endcomment -%}
      <div class="mcc-kelp-right-front" data-kelp-svg="{{ 'right-side-front-kelp.svg' | asset_url }}"></div>
      
      {%- comment -%} Left-side kelp {%- endcomment -%}
      <div class="mcc-kelp-left" data-kelp-svg="{{ 'left-side-kelp.svg' | asset_url }}"></div>
    </div>
  {%- endif -%}
  
  <div class="mcc-footer-wrapper" data-cascade>
    {%- comment -%} Left: Logo text and social icons {%- endcomment -%}
    <div class="mcc-footer-left">
      <h2 class="mcc-footer-logo-text scroll-trigger animate--fade-in scroll-trigger--offscreen">
        <span class="mcc-footer-logo-line">MALIBU</span>
        <span class="mcc-footer-logo-line">COFFEE</span>
        <span class="mcc-footer-logo-line">COMPANY</span>
      </h2>
      <div class="mcc-footer-social scroll-trigger animate--fade-in scroll-trigger--offscreen">
        <a href="https://www.instagram.com/malibucoffeecompany/" class="mcc-social-link" aria-label="Instagram" target="_blank" rel="noopener">
          <span class="mcc-social-icon-wrapper">
            {{- 'icon-instagram.svg' | inline_asset_content -}}
          </span>
        </a>
        {%- if settings.social_pinterest_link != blank -%}
          <a href="{{ settings.social_pinterest_link }}" class="mcc-social-link" aria-label="Pinterest" target="_blank" rel="noopener">
        {%- else -%}
          <span class="mcc-social-link">
        {%- endif -%}
          <span class="mcc-social-icon-wrapper">
            {{- 'icon-pinterest.svg' | inline_asset_content -}}
          </span>
        {%- if settings.social_pinterest_link != blank -%}
          </a>
        {%- else -%}
          </span>
        {%- endif -%}
        {%- if settings.social_tiktok_link != blank -%}
          <a href="{{ settings.social_tiktok_link }}" class="mcc-social-link" aria-label="TikTok" target="_blank" rel="noopener">
        {%- else -%}
          <span class="mcc-social-link">
        {%- endif -%}
          <span class="mcc-social-icon-wrapper">
            {{- 'icon-tiktok.svg' | inline_asset_content -}}
          </span>
        {%- if settings.social_tiktok_link != blank -%}
          </a>
        {%- else -%}
          </span>
        {%- endif -%}
      </div>
    </div>

    {%- comment -%} Center-Right: Navigation links in three columns {%- endcomment -%}
    <div class="mcc-footer-nav">
      <div class="mcc-footer-nav-col scroll-trigger animate--fade-in scroll-trigger--offscreen">
        <h3 class="mcc-footer-nav-title">Company</h3>
        <ul class="mcc-footer-nav-list">
          {%- if section.settings.about_us_link != blank -%}
            <li><a href="{{ section.settings.about_us_link }}">About us</a></li>
          {%- endif -%}
          {%- if section.settings.wholesale_link != blank -%}
            <li><a href="{{ section.settings.wholesale_link }}">Wholesale</a></li>
          {%- endif -%}
          {%- if section.settings.partnerships_link != blank -%}
            <li><a href="{{ section.settings.partnerships_link }}">Partnerships</a></li>
          {%- endif -%}
          {%- if section.settings.contact_link != blank -%}
            <li><a href="{{ section.settings.contact_link }}">Contact us</a></li>
          {%- endif -%}
        </ul>
      </div>

      <div class="mcc-footer-nav-col scroll-trigger animate--fade-in scroll-trigger--offscreen">
        <h3 class="mcc-footer-nav-title">Products</h3>
        <ul class="mcc-footer-nav-list">
          {%- if coldbrew_col != blank -%}
            <li><a href="{{ coldbrew_col.url }}">Cold brew</a></li>
          {%- endif -%}
          {%- if beans_col != blank -%}
            <li><a href="{{ beans_col.url }}">Coffee</a></li>
          {%- endif -%}
          {%- if merch_col != blank -%}
            <li><a href="{{ merch_col.url }}">Merchandise</a></li>
          {%- endif -%}
        </ul>
      </div>

      <div class="mcc-footer-nav-col scroll-trigger animate--fade-in scroll-trigger--offscreen">
        <h3 class="mcc-footer-nav-title">Account</h3>
        <ul class="mcc-footer-nav-list">
          <li><a href="{{ routes.account_login_url }}">Log in</a></li>
          <li><span class="mcc-footer-text-only">Orders</span></li>
          <li><span class="mcc-footer-text-only">Subscriptions</span></li>
        </ul>
      </div>
    </div>
  </div>

  {%- comment -%} Bottom: Legal text and company logo {%- endcomment -%}
  <div class="mcc-footer-bottom-wrapper">
    <div class="mcc-footer-bottom">
      <div class="mcc-footer-legal">
        <span class="mcc-footer-copyright">&copy; {{ 'now' | date: '%Y' }} Malibu Coffee Company</span>
        <span class="mcc-footer-policy-sep"> </span>
        {%- for policy in shop.policies -%}
          {%- if policy != blank -%}
            <a href="{{ policy.url }}">{{ policy.title | escape }}</a>
            {%- unless forloop.last -%}<span class="mcc-footer-policy-sep"> </span>{%- endunless -%}
          {%- endif -%}
        {%- endfor -%}
      </div>
      {%- if section.settings.company_logo != blank -%}
        <div class="mcc-footer-logo">
          {{ section.settings.company_logo | image_url: width: 200 | image_tag: alt: 'Malibu Coffee Company', class: 'mcc-footer-logo-img' }}
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

<style>
/* Override parent section backgrounds */
.shopify-section:has(.mcc-landing-footer),
.shopify-section:has([data-mcc-landing="footer"]),
[id*="shopify-section"]:has(.mcc-landing-footer),
[id*="shopify-section-footer"]:has(.mcc-landing-footer),
.shopify-section:has(.mcc-landing-footer) > * {
  background: transparent !important;
  background-color: transparent !important;
  background-image: none !important;
  overflow: hidden !important; /* Ensure parent sections clip content */
  /* Prevent parent from expanding */
  max-height: 100% !important;
  height: auto !important;
}

/* Ensure parent section doesn't expand beyond footer */
.shopify-section:has(.mcc-landing-footer),
[id*="shopify-section"]:has(.mcc-landing-footer) {
  overflow: hidden !important;
  /* Match footer height to prevent expansion */
  height: fit-content !important;
  max-height: fit-content !important;
}

/* Override .gradient class on parent section */
.shopify-section:has(.mcc-landing-footer).gradient,
.shopify-section:has(.mcc-landing-footer) .gradient,
[id*="shopify-section"]:has(.mcc-landing-footer).gradient {
  background: transparent !important;
  background-color: transparent !important;
  background-image: none !important;
  background-attachment: scroll !important;
}

/* Override color scheme CSS variables */
.shopify-section:has(.mcc-landing-footer)[class*="color-"] {
  --color-background: transparent !important;
  --gradient-background: transparent !important;
}

/* Footer section - transparent background */
section.mcc-landing-footer,
.mcc-landing-footer,
section.mcc-landing-footer.gradient,
.mcc-landing-footer.gradient {
  position: relative;
  padding: 60px 50px 16px;
  color: #fff !important;
  overflow: hidden !important; /* Clip kelp at footer boundaries - force clipping */
  background-color: transparent !important;
  width: 100%;
  aspect-ratio: 16 / 9; /* Maintain 16:9 aspect ratio */
  min-height: 200px; /* Fallback for older browsers */
  /* Explicitly set height based on aspect ratio to prevent expansion */
  height: calc(100vw * 9 / 16); /* Height = width * 9/16 for 16:9 */
  max-height: calc(100vw * 9 / 16); /* Prevent expansion beyond 16:9 */
  display: flex !important;
  flex-direction: column !important;
  /* Ensure footer doesn't expand beyond aspect ratio */
  box-sizing: border-box;
  /* Force clipping at all screen sizes */
  contain: layout style paint;
}

/* Video background */
.mcc-footer-video-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  z-index: -2; /* Behind kelp layers */
  pointer-events: none;
  display: block;
  opacity: 1;
  visibility: visible;
}

/* Background image via ::before pseudo-element */
/* When video is enabled, this is completely hidden */
/* When video is disabled, this is the primary background (z-index: -1) */
section.mcc-landing-footer::before,
.mcc-landing-footer::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: -1;
  pointer-events: none;
  {%- if section.settings.background_image != blank -%}
  background-image: url('{{ section.settings.background_image | image_url: width: 2400 }}');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  {%- else -%}
  {%- comment -%} Hard-coded fallback: Use the same background image as landing page {%- endcomment -%}
  background-image: url('{{ 'Footer img placeholder.png' | asset_url }}');
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  {%- endif -%}
}

/* Show background image by default when video is enabled (as fallback while video loads) */
/* Hide it once video starts playing */
.mcc-footer-has-video::before {
  display: block !important;
}

/* Hide background image when video is successfully playing */
.mcc-footer-has-video.mcc-footer-video-playing::before {
  display: none !important;
}

/* Kelp container - Project Spongebob */
.mcc-footer-kelp-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden !important; /* Clip kelp at footer boundaries - force */
  pointer-events: none;
  z-index: -1; /* Above video, below content */
  display: none; /* Hidden by default, shown on desktop */
  /* Ensure container doesn't expand beyond footer */
  max-width: 100% !important;
  max-height: 100% !important;
  width: 100% !important;
  height: 100% !important;
  /* Force clipping */
  contain: layout style paint;
}

/* Show kelp on desktop only (≥769px) */
@media (min-width: 769px) {
  .mcc-footer-kelp-container {
    display: block;
  }
}

/* Left-side kelp */
.mcc-kelp-left {
  position: absolute;
  bottom: 0; /* Anchor to footer bottom */
  left: 0;
  margin-left: -133px; /* Extends 133px left of footer */
  height: 100%; /* Take full height of footer */
  width: auto;
  overflow: hidden; /* Clip at container */
  max-width: calc(100% + 133px); /* Allow extension left, but clip */
  display: flex;
  align-items: flex-end; /* Align SVG to bottom */
}

.mcc-kelp-left svg {
  position: relative;
  width: auto;
  height: auto;
  max-width: calc(100% + 133px); /* Allow extension left, but clip at container */
  max-height: 100%; /* Clip at footer bottom */
  display: block;
  overflow: visible; /* Allow SVG content, but container clips */
  box-sizing: border-box;
  transform-origin: bottom center;
  margin-top: auto; /* Push to bottom in flex container */
  /* Negative bottom margin to shift SVG down and align kelp bottom with container bottom */
  margin-bottom: 0; /* Will be set via JavaScript */
}

/* Right-side mid kelp (background layer) */
.mcc-kelp-right-mid {
  position: absolute;
  top: 0;
  right: 0;
  margin-top: -336px; /* Extends 336px above footer */
  height: auto;
  width: auto;
  overflow: hidden; /* Clip at container */
  max-height: calc(100% + 336px); /* Allow extension above, but clip */
}

.mcc-kelp-right-mid svg {
  width: auto;
  height: auto;
  max-width: 100%;
  max-height: calc(100% + 336px); /* Allow extension above, but clip at container */
  display: block;
  overflow: visible; /* Allow SVG content, but container clips */
  /* Ensure SVG doesn't cause container expansion */
  position: relative;
  box-sizing: border-box;
}

/* Right-side front kelp (foreground layer) */
.mcc-kelp-right-front {
  position: absolute;
  bottom: 0; /* Anchor to footer bottom */
  right: 0;
  margin-right: -183px; /* Extends 183px right of footer */
  height: 100%; /* Take full height of footer */
  width: auto;
  overflow: hidden; /* Clip at container */
  max-width: calc(100% + 183px); /* Allow extension right, but clip */
  display: flex;
  align-items: flex-end; /* Align SVG to bottom */
}

.mcc-kelp-right-front svg {
  position: relative;
  width: auto;
  height: auto;
  max-width: calc(100% + 183px); /* Allow extension right, but clip at container */
  max-height: 100%; /* Clip at footer bottom */
  display: block;
  overflow: visible; /* Allow SVG content, but container clips */
  box-sizing: border-box;
  transform-origin: bottom center;
  margin-top: auto; /* Push to bottom in flex container */
  /* Negative bottom margin to shift SVG down and align kelp bottom with container bottom */
  margin-bottom: 0; /* Will be set via JavaScript */
}

/* Kelp wave animation - Project Spongebob */
/* Individual strand animation for natural undulating wave effect */
@media (min-width: 769px) and (prefers-reduced-motion: no-preference) {
  /* Base sway animation - subtle parent motion */
  @keyframes kelpBaseSway {
    0%, 100% { 
      transform: rotate(-1deg) translateX(-1px) translateY(0px) skewY(0.2deg);
    }
    50% { 
      transform: rotate(1deg) translateX(1px) translateY(-1px) skewY(-0.2deg);
    }
  }

  /* Undulation animation for individual strands - creates wave-like motion with vertical bounce */
  /* Organic, flowing motion with asymmetrical keyframes for natural undulation */
  @keyframes kelpStrandUndulate {
    0% { 
      transform: rotate(-1.8deg) translateX(-2.2px) translateY(0.5px) skewY(0.35deg);
    }
    12% { 
      transform: rotate(-0.3deg) translateX(-0.3px) translateY(-1.8px) skewY(0.08deg);
    }
    25% { 
      transform: rotate(1.2deg) translateX(1.8px) translateY(-3.5px) skewY(-0.18deg);
    }
    38% { 
      transform: rotate(2.8deg) translateX(3.8px) translateY(-5.2px) skewY(-0.48deg);
    }
    50% { 
      transform: rotate(3.2deg) translateX(4.2px) translateY(-6.5px) skewY(-0.55deg);
    }
    62% { 
      transform: rotate(2.2deg) translateX(2.8px) translateY(-4.8px) skewY(-0.35deg);
    }
    75% { 
      transform: rotate(0.8deg) translateX(1.2px) translateY(-2.5px) skewY(-0.15deg);
    }
    88% { 
      transform: rotate(-0.8deg) translateX(-1.2px) translateY(-0.8px) skewY(0.12deg);
    }
    100% { 
      transform: rotate(-1.8deg) translateX(-2.2px) translateY(0.5px) skewY(0.35deg);
    }
  }

  /* Target individual strand groups within each kelp SVG */
  /* Use both ID and class selectors for flexibility */
  
  /* Left-side kelp - PARENT GROUP: moves all strands together */
  .mcc-kelp-left svg #left-side-kelp,
  .mcc-kelp-left svg [id="left-side-kelp"] {
    animation: kelpUndulate 8s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    transform-origin: bottom center;
  }

  /* Left-side kelp - CHILD STRANDS: independent motion relative to parent */
  .mcc-kelp-left svg #l-sprig,
  .mcc-kelp-left svg [id="l-sprig"],
  .mcc-kelp-left svg #l-kelp,
  .mcc-kelp-left svg [id="l-kelp"],
  .mcc-kelp-left svg #l-lettuce,
  .mcc-kelp-left svg [id="l-lettuce"] {
    animation: kelpStrandUndulate 8s cubic-bezier(0.4, 0.1, 0.6, 0.9) infinite;
    transform-origin: bottom center;
  }
  
  /* Left-side kelp - stagger delays for wave effect */
  .mcc-kelp-left svg #l-sprig,
  .mcc-kelp-left svg [id="l-sprig"] {
    animation-delay: 0s;
  }
  .mcc-kelp-left svg #l-kelp,
  .mcc-kelp-left svg [id="l-kelp"] {
    animation-delay: 1.2s;
  }
  .mcc-kelp-left svg #l-lettuce,
  .mcc-kelp-left svg [id="l-lettuce"] {
    animation-delay: 2.4s;
  }

  /* Right-side front kelp - TOP PARENT: no animation to prevent transform stacking */
  /* Animation removed - only r-front-kelp animates to move strands together */
  .mcc-kelp-right-front svg #right-side-front-kelp,
  .mcc-kelp-right-front svg [id="right-side-front-kelp"] {
    /* No animation - prevents transform stacking with r-front-kelp */
    transform-origin: bottom center;
  }

  /* Right-side front kelp - INTERMEDIATE PARENT: no animation */
  /* Strands provide all the motion to create wave propagation effect */
  .mcc-kelp-right-front svg #r-front-kelp,
  .mcc-kelp-right-front svg [id="r-front-kelp"] {
    /* No animation - let strands create the wave undulation */
    transform-origin: bottom center;
  }

  /* Right-side front kelp - DIRECT CHILDREN: independent motion relative to top parent */
  .mcc-kelp-right-front svg #r-sea-sprig,
  .mcc-kelp-right-front svg [id="r-sea-sprig"],
  .mcc-kelp-right-front svg #r-sea-glob,
  .mcc-kelp-right-front svg [id="r-sea-glob"] {
    animation: kelpUndulate 8.2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    transform-origin: bottom center;
  }

  /* Right-side front kelp - INDIVIDUAL STRANDS: children of r-front-kelp */
  /* Each strand has its own undulation with different phases to create wave propagation */
  .mcc-kelp-right-front svg #right-strand-1,
  .mcc-kelp-right-front svg [id="right-strand-1"] {
    animation: kelpStrandUndulate 8s cubic-bezier(0.4, 0.1, 0.6, 0.9) infinite;
    animation-delay: 0s;
    transform-origin: bottom center;
  }
  .mcc-kelp-right-front svg #right-strand-2,
  .mcc-kelp-right-front svg [id="right-strand-2"] {
    animation: kelpStrandUndulate 8.5s cubic-bezier(0.4, 0.1, 0.6, 0.9) infinite;
    animation-delay: 1.5s; /* Wave phase offset for propagation */
    transform-origin: bottom center;
  }
  .mcc-kelp-right-front svg #right-strand-3,
  .mcc-kelp-right-front svg [id="right-strand-3"] {
    animation: kelpStrandUndulate 8.2s cubic-bezier(0.4, 0.1, 0.6, 0.9) infinite;
    animation-delay: 3s; /* Wave phase offset for propagation */
    transform-origin: bottom center;
  }
  /* Disable animation on nested elements inside strands - they inherit strand motion */
  .mcc-kelp-right-front svg #right-strand-1 *,
  .mcc-kelp-right-front svg [id="right-strand-1"] *,
  .mcc-kelp-right-front svg #right-strand-2 *,
  .mcc-kelp-right-front svg [id="right-strand-2"] *,
  .mcc-kelp-right-front svg #right-strand-3 *,
  .mcc-kelp-right-front svg [id="right-strand-3"] * {
    animation: none !important;
  }

  /* Right-side mid kelp - PARENT: no animation */
  /* Strands provide all the motion to create wave propagation effect */
  .mcc-kelp-right-mid svg #right-side-mid-kelp,
  .mcc-kelp-right-mid svg [id="right-side-mid-kelp"] {
    /* No animation - let strands create the wave undulation */
    transform-origin: bottom center; /* Changed from top center - kelp should sway from base */
  }

  /* Right-side mid kelp strands - children have independent undulation with wave propagation */
  .mcc-kelp-right-mid svg #right-mid-strand-1,
  .mcc-kelp-right-mid svg [id="right-mid-strand-1"] {
    animation: kelpStrandUndulate 8.5s cubic-bezier(0.4, 0.1, 0.6, 0.9) infinite;
    animation-delay: 0s;
    transform-origin: bottom center;
  }
  .mcc-kelp-right-mid svg #right-mid-strand-2,
  .mcc-kelp-right-mid svg [id="right-mid-strand-2"] {
    animation: kelpStrandUndulate 9s cubic-bezier(0.4, 0.1, 0.6, 0.9) infinite;
    animation-delay: 1.8s; /* Wave phase offset */
    transform-origin: bottom center;
  }
  /* Disable animation on nested elements inside strands - they inherit strand motion */
  .mcc-kelp-right-mid svg #right-mid-strand-1 *,
  .mcc-kelp-right-mid svg [id="right-mid-strand-1"] *,
  .mcc-kelp-right-mid svg #right-mid-strand-2 *,
  .mcc-kelp-right-mid svg [id="right-mid-strand-2"] * {
    animation: none !important;
  }

  /* Different animation delays for natural variation - Left side */
  /* Parent group - base motion for all strands */
  .mcc-kelp-left svg #left-side-kelp,
  .mcc-kelp-left svg [id="left-side-kelp"] {
    animation-delay: 0s;
    animation-duration: 8s;
  }
  /* Child strands - independent variation on top of parent motion */
  .mcc-kelp-left svg #l-sprig,
  .mcc-kelp-left svg [id="l-sprig"] {
    animation-delay: 0s;
    animation-duration: 8s;
  }
  .mcc-kelp-left svg #l-kelp,
  .mcc-kelp-left svg [id="l-kelp"] {
    animation-delay: 0.8s;
    animation-duration: 8.3s;
  }
  .mcc-kelp-left svg #l-lettuce,
  .mcc-kelp-left svg [id="l-lettuce"] {
    animation-delay: 1.6s;
    animation-duration: 8.1s;
  }

  /* Different animation delays - Right front */
  /* Top parent - no animation delays (no animation) */
  /* Intermediate parent - motion for strand group */
  .mcc-kelp-right-front svg #r-front-kelp,
  .mcc-kelp-right-front svg [id="r-front-kelp"] {
    animation-delay: 0s;
    animation-duration: 8.2s;
  }
  /* Direct children - independent variation */
  .mcc-kelp-right-front svg #r-sea-sprig,
