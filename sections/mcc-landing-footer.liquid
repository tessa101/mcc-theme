  // Function to show fallback image (hide video)
  function showFallback(reason) {
    if (fallbackShown) return;
    fallbackShown = true;
    
    console.warn('Footer video failed, showing fallback image. Reason:', reason || 'unknown');
    console.warn('Video source was:', videoSrc);
    video.style.display = 'none';
    footer.classList.remove('mcc-footer-video-playing');
  }
  
  // Function to hide fallback image (show video)
  function hideFallback() {
    footer.classList.add('mcc-footer-video-playing');
  }
  
  // Ensure video is visible initially
  video.style.display = 'block';
  
  // Handle video load errors - show fallback image
  video.addEventListener('error', function(e) {
    const error = video.error;
    let errorMessage = 'Unknown error';
    
    if (error) {
      switch(error.code) {
        case error.MEDIA_ERR_ABORTED:
          errorMessage = 'Video loading aborted';
          break;
        case error.MEDIA_ERR_NETWORK:
          errorMessage = 'Network error while loading video';
          break;
        case error.MEDIA_ERR_DECODE:
          errorMessage = 'Video decoding error';
          break;
        case error.MEDIA_ERR_SRC_NOT_SUPPORTED:
          errorMessage = 'Video format not supported or source not found';
          break;
        default:
          errorMessage = 'Unknown video error (code: ' + error.code + ')';
      }
    }
    
    console.error('Footer video error event:', e);
    console.error('Video error details:', {
      error: error,
      errorCode: error ? error.code : 'none',
      errorMessage: errorMessage,
      networkState: video.networkState,
      networkStateText: getNetworkStateText(video.networkState),
      readyState: video.readyState,
      readyStateText: getReadyStateText(video.readyState),
      src: videoSrc,
      currentSrc: video.currentSrc
    });
    showFallback(errorMessage);
  });
  
  // Helper function to get network state text
  function getNetworkStateText(state) {
    const states = ['EMPTY', 'IDLE', 'LOADING', 'NO_SOURCE'];
    return states[state] || 'UNKNOWN';
  }
  
  // Helper function to get ready state text
  function getReadyStateText(state) {
    const states = ['HAVE_NOTHING', 'HAVE_METADATA', 'HAVE_CURRENT_DATA', 'HAVE_FUTURE_DATA', 'HAVE_ENOUGH_DATA'];
    return states[state] || 'UNKNOWN';
  }
  
  // Handle stalled video
  video.addEventListener('stalled', function() {
    console.warn('Footer video stalled - network issue');
    if (video.networkState === video.NETWORK_NO_SOURCE) {
      showFallback('Video source not found (stalled)');
    }
  });
  
  // Handle suspended video
  video.addEventListener('suspend', function() {
    console.warn('Footer video suspended - loading paused');
  });
  
  // Handle aborted video
  video.addEventListener('abort', function() {
    console.warn('Footer video aborted');
    showFallback('Video loading aborted');
  });
  
  // Function to force video play
  function forcePlay() {
    if (fallbackShown) return;
    
    if (video.readyState >= 2) {
      const playPromise = video.play();
      if (playPromise !== undefined) {
        playPromise.then(function() {
          console.log('Footer video is playing');
          video.style.display = 'block';
          hideFallback(); // Hide the fallback image once video is playing
        }).catch(function(error) {
          console.warn('Video autoplay prevented:', error);
          // Don't show fallback for autoplay restrictions, just try on interaction
          const playOnInteraction = function() {
            video.play().then(function() {
              video.style.display = 'block';
              hideFallback();
            }).catch(function() {});
            document.removeEventListener('click', playOnInteraction);
            document.removeEventListener('touchstart', playOnInteraction);
          };
          document.addEventListener('click', playOnInteraction, { once: true });
          document.addEventListener('touchstart', playOnInteraction, { once: true });
        });
