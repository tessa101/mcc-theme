        // Find all strand elements - animate only the parent groups
        Object.keys(kelpAnimationConfig.strands).forEach(function(strandId) {
          const strandEl = svg.querySelector('#' + strandId + ', [id="' + strandId + '"]');
          if (strandEl) {
            // Disable CSS animation on strand
            strandEl.style.animation = 'none';
            
            // Animate only the parent strand group - children will move with it
            animatedStrands.push({
              element: strandEl,
              config: kelpAnimationConfig.strands[strandId]
            });
          }
        });
      });
      
      if (animatedStrands.length > 0) {
