                }).join(', '));
                if (allPaths.length > 1) {
                  console.log('  - Second path attributes:', Array.from(allPaths[1].attributes).map(function(attr) {
                    return attr.name + '=' + attr.value;
                  }).join(', '));
                }
              }
              
              if (allGroups.length > 0) {
                console.log('  - First group attributes:', Array.from(allGroups[0].attributes).map(function(attr) {
                  return attr.name + '=' + attr.value;
                }).join(', '));
              }
              
              console.warn('⚠️ SVG files need to have IDs on groups for animations to work. Current SVG has no IDs.');
