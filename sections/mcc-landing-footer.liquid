                id: svg.id,
                children: svg.children.length,
                firstChild: svg.firstElementChild ? svg.firstElementChild.tagName : 'none'
              });
              // Try to find any groups or paths
              const allGroups = svg.querySelectorAll('g');
              const allPaths = svg.querySelectorAll('path');
              console.log('  - Found', allGroups.length, 'groups and', allPaths.length, 'paths');
              
              // Log first few paths to see their structure
              if (allPaths.length > 0) {
                console.log('  - First path attributes:', Array.from(allPaths[0].attributes).map(function(attr) {
