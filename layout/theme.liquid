(function(){
  var body = document.body;
  if (!body.classList.contains('is-landing-mcc')) return;

  // Find the hero on the page
  var hero = document.querySelector('[data-mcc-landing="hero"]');
  if (!hero) return;

  var invertOn = (hero.getAttribute('data-invert-header') === 'true');

  function apply(inView){
    body.classList.toggle('mcc-landing-header--transparent', inView);
    body.classList.toggle('mcc-landing-header--solid', !inView);
    body.classList.toggle('mcc-landing-header--invert', inView && invertOn);
  }

  function reassess(){
    var r = hero.getBoundingClientRect();
    var inView = (r.bottom > 0 && r.top < window.innerHeight);
    apply(inView);
  }

  // Run now, and keep it in sync
  reassess();
  window.addEventListener('scroll', reassess, { passive: true });
  window.addEventListener('resize', reassess);
})();
</script>

