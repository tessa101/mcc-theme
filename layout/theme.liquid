<!-- MCC Panic probe: detect body/html dumps and show call stack -->
<script id="mcc-panic-probe">
(function(){
  const say = (msg) => console.warn('[PANIC]', msg, '\n', new Error().stack);
  const obs = new MutationObserver((muts) => {
    for (const m of muts) {
      if ((m.target === document.body || m.target === document.documentElement)) {
        if (!document.body || document.body.childElementCount === 0) {
          say('Body emptied or replaced');
        }
      }
    }
  });
  obs.observe(document.documentElement, {childList:true, subtree:true});
  window.__mccPanicProbe = obs;
})();
</script>

 <!-- MCC Anti-Blank (single guard) -->
{%- unless template == 'product.merch_mobile' -%}
  <!-- AntiBlank / Guard -->
  <script>
    (function(){
      function trace(label, args){ try{ throw new Error(label); }catch(e){ console.warn(label, args && String(args[0]).slice(0,160), '\n', e.stack); } }
      ['write','writeln','open'].forEach(function(fn){
        var orig = document[fn];
        document[fn] = function(){
          if (document.readyState === 'loading') return orig && orig.apply(document, arguments);
          trace('[Guard] document.'+fn+' blocked AFTER load', arguments);
          return undefined;
        };
      });
    })();
  </script>
