{% comment %}
MCC Product Content - Brewing Methods Section Block
Only shows for coffee beans, not cold brew
{% endcomment %}

{%- comment -%} Detect product type {%- endcomment -%}
{% render 'mcc-product-type-detection', product: product %}

{%- if is_coffee_beans and is_cold_brew == false -%}
  <section class="coffee-accordion content-section" data-accordion data-acc="brew" data-stagger="rows" {{ block.shopify_attributes }}>
    <header class="coffee-acc-header">
      <h2 class="coffee-acc-title brew-title">Brewing methods</h2>
      <button class="coffee-acc-trigger" type="button"
              aria-controls="acc-brew-{{ section.id }}" aria-expanded="true">
        <span class="sr-only">Toggle Brewing methods</span>
      </button>
    </header>
    <div id="acc-brew-{{ section.id }}" class="coffee-acc-panel mcc-anim" data-acc-panel>
      {% render 'mcc-brew-methods', product: product %}
    </div>
  </section>
{%- endif -%}

